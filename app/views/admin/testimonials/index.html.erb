<%= page_entries_info @testimonials %>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonials.each do |testimonial| %>
      <tr>
        <td><%= testimonial.author %></td>
        <td><%= link_to 'Edit', edit_admin_testimonial_path(testimonial) %></td>
        <td><%= link_to 'Destroy', admin_testimonial_path(testimonial), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @testimonials %>

<%= link_to 'New', new_admin_testimonial_path %>
