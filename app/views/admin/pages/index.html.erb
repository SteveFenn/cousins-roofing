<%= render partial: "partials/header", locals: { text: 'Pages' } %>

<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td class="action">
          <%= link_to edit_admin_page_path(page) do %>
            <%= fa_icon "cog" %> edit
          <% end %>
        </td>
        <td class="action">
          <%= link_to admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <%= fa_icon "trash" %> delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render partial: "partials/pagination", locals: { items: @pages } %>

<%= link_to 'Create new page', new_admin_page_path, class: 'btn btn-primary btn-lg' %>
