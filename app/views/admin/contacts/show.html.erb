<%= render partial: "partials/header", locals: { text: "Email from #{@contact.name}" } %>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <td><%= @contact.name %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= @contact.email %></td>
  </tr>
  <tr>
    <th>Telephone</th>
    <td><%= @contact.telephone %></td>
  </tr>
  <tr>
    <th>Message</th>
    <td><%= @contact.message %></td>
  </tr>
</table>

<%= link_to 'Back to contacts', admin_contacts_path, class: 'btn btn-primary btn-lg' %>
